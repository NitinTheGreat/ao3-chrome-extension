{
  "manifest_version": 3,
  "name": "AO3 Assist",
  "version": "1.0",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["content.js"]
    }
  ]
}
